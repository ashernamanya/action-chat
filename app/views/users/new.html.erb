<%= form_for @user, html: {class: "ui form"} do |f| %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.submit "sign up", class: "ui button" %>
  </div>

<% end %>